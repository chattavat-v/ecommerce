<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Prompt" rel="stylesheet">
    <title><%= title %></title>
</head>
<body style="background: rgba(16, 172, 16, 0.692);">
    <!-- Section Navbar -->
    <section>
        <nav id="navbar" class="navbar navbar-expand-lg navbar-dark bg-alpha">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="/images/icon.png" width="30" height="30" class="d-inline-block align-top"
                        alt="">
                    GrowElectronics
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#toggle" aria-controls="toggle"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="toggle">
                    <ul class="navbar-nav ml-auto text-center">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/profile">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/orders">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card m-2">
                    <div class="card-body">
                        <div class="row">
                            <img src="/images/icon.png" width="50" height="50" class="d-inline-block align-top" alt="">
                            <h2 class="text-center py-1">สินค้า - GrowElectronics</h2>

                            
                            
                            <div class="col-12 text-right">
                                    <button type="button" onClick="window.location.href='/admin/add'"
                                    class="btn btn-primary col-sm-2 my-2">ADD</button>
                            </div>

                            <table class="table text-center">
                                <thead class="thead-dark">
                                    <tr class="text-center">
                                    <th scope="col">ชนิดสินค้า</th>
                                    <th scope="col">ชื่อสินค้า</th>
                                    <th scope="col">ราคา</th>
                                    <th scope="col">Edit</th>
                                    <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                                    <% products.forEach(function(item){ %>
                                        <tbody>
                                                
                                            <tr>
                                            <td><%=item.productType%></td>
                                            <td><%=item.productName%></td>
                                            <td><%=item.unitPrice%></td>
                                            <td>
                                                <button type="button" onClick="window.location.href='/admin/edit/<%=item._id%>'"
                                                        class="btn btn-primary">Edit</button>
                                            </td>
                                                <td>
                                                    <form action="/admin/delete_product/<%=item._id %>" method="post">
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        </tbody>
                                    <%});%>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="/jquery/dist/jquery.min.js"></script>
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/popper.js/dist/umd/popper.min.js"></script>
    <script src="/sweetalert2/dist/sweetalert2.min.js"></script>
</body>
</html>